.cam{
  width: 350px;
  height: 250px;
  transform: translate3d(0,0,0);
}

.twitch{
  height: 100%;
  width: 100%;
  border: none;
}
.white-text {
  color: white;
}
.twitch-frame{
  width: 300px;
  height: 169px;
  background-color: white;
  overflow: hidden;
}

.info{
  width: 350px;
  height: 56px;
  .infoItem{
    width: 100%;
    transform: translate3d(0,0,0);
  }
}
.twitter{
  width: 350px;
  height: 150px;
  .tweet{
    width: 350px;
    height: 150px;
    transform: translate3d(0,0,0);
    p{
      word-wrap: break-word;
    }
  }
}

.polls{
  //width: 350px;
  // height: 150px;
  .panel-body{
    padding-bottom: 0px;
  }
  .answer{
    // width: 350px;
    // height:100%;
    padding:5px 10px;
    transform: translate3d(0,0,0);
    p{
      margin-bottom: 5px;
    }
    .progress{
      margin-bottom: 5px;
      height: 25px;
      .progress-bar{
        // min-width: 2em;
        line-height: 25px;
      }
    }
  }
}

.panel-chat {
  .panel-body{
    padding: 0px 5px;
  }
  .chat{
    width: 350px;
    overflow: hidden;
    .chatItem{
      width: 100%;
      transform: translate3d(0,0,0);
    }
  }
}

.top {
  top: 5px;
}

.bottom{
  bottom: 5px;
}

.left{
  left: 5px;
}

.right{
  right: 5px;
}

.area {
  position:absolute;
}

.plugin-panel{
  margin: 0px;
}

.absolute{
  position:absolute;
}

body, html{
  main{
    height: calc(100% - 64px - 23px);
    position: relative;
  }
  height: 100%;
  width:100%;
  overflow-x: hidden;
}
